{
  "groups": [
    {
      "name": "nb.hibernate",
      "type": "com.nbsaas.hibernate.HibernateProperties",
      "sourceType": "com.nbsaas.hibernate.HibernateProperties"
    }
  ],
  "properties": [
    {
      "name": "nb.hibernate.hbm2ddl",
      "type": "java.lang.String",
      "description": "反向生成sql方式.",
      "defaultValue": "none",
      "values": [
        {
          "value": "none",
          "description": "Disable DDL handling."
        },
        {
          "value": "validate",
          "description": "Validate the schema, make no changes to the database."
        },
        {
          "value": "update",
          "description": "Update the schema if necessary."
        },
        {
          "value": "create",
          "description": "Create the schema and destroy previous data."
        },
        {
          "value": "create-drop",
          "description": "Create and then destroy the schema at the end of the session."
        }
      ]
    },
    {
      "name": "nb.hibernate.dialect",
      "type": "java.lang.String",
      "description": "hibernate方言.",
      "defaultValue": "org.hibernate.dialect.MySQL55Dialect"
    },
    {
      "name": "nb.hibernate.show_sql",
      "type": "java.lang.Boolean",
      "description": "是否显示sql.",
      "defaultValue": false
    },
    {
      "name": "nb.hibernate.format_sql",
      "type": "java.lang.Boolean",
      "description": "是否格式化sql.",
      "defaultValue": false
    },
    {
      "name": "nb.hibernate.entities",
      "type": "java.util.List",
      "description": "实体类的包名.",
      "defaultValue": null
    }
  ]
}